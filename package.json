{
  "name": "honmaku-status",
  "version": "1.0.0",
  "description": "Simple service status monitoring",
  "main": "scripts/check-status.js",
  "scripts": {
    "check": "node scripts/check-status.js",
    "start": "http-server -o",
    "dev": "concurrently \"npm run server\" \"npm run watch\"",
    "server": "http-server -o",
    "watch": "nodemon -e js,json --exec \"npm run check\""
  },
  "keywords": ["status", "monitoring", "uptime"],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.2.0",
    "http-server": "^14.1.1",
    "nodemon": "^3.0.1"
  }
}